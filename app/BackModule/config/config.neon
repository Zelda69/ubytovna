# Konfigurační soubor pro BackModule.

parameters:
    # Presentery.
    ahome: Back:Homepage
    aroom: Back:Room
    areservation: Back:Reservation
    aguests: Back:Guests

# Nastavení služeb dále přístupných pomocí DI v rámci celé aplikace.
services:
    # Managers
    security.authorizator:
            setup:
                    - addResource(%ahome%)
                    - addResource(%aroom%)
                    - addResource(%areservation%)
                    - addResource(%aguests%)
                    - allow(%admin%, %areservation%)
                    - allow(%admin%, %ahome%)
                    - allow(%admin%, %aroom%)
                    - allow(%admin%, %aguests%)