{define title}Úvodní stránka{/define}
{define description}Úvodní stránka webové aplikace{/define}
{block content}

<div id="sp-page-builder" class="sp-page-builder  page-123">
    <div class="page-content">
        <div class="sppb-section  seagull-search">
            <div class="sppb-row-container">
                <div class="sppb-row">
                    <div class="sppb-col-sm-12">
                        <div class="sppb-column">
                            <div class="sppb-column-addons">
                                <div class="clearfix">
                                    <div class="sppb-addon sppb-addon-module ">
                                        <div class="sppb-addon-content">
                                            <div class="container">
                                                {form vacancyForm} {*class="form-stacked sr-validate"*}
                                                    <h3 style="margin-top: -10px;">Ověřit dostupnost ubytování</h3>
                                                    <fieldset>
                                                        <div class="col-sm-2"></div>
                                                        <div class="sr-chk-availablity-input-wrap">
                                                            <div class="col-sm-5">
                                                                <div class="check-in col-sm-6 col-xs-12" style="text-align: left;">
                                                                    {label from}
                                                                    {input from class => 'checkin_module datefield'}
                                                                    {inputError from}
                                                                </div>
                                                                <div class="check-out col-sm-6 col-xs-12" style="text-align: left;">
                                                                    {label to}
                                                                    {input to class => 'checkin_module datefield'}
                                                                    {inputError to}
                                                                </div>
                                                            </div>
                                                        </div> <!-- /.sr-chk-availablity-input-wrap -->
                                                        <div class="check-button col-sm-3">
                                                            <div class="action">
                                                                {input submit class => 'btn btn-block btn-primary'}
                                                                {*<i class="icon-search uk-icon-search"></i>*}
                                                            </div>
                                                        </div>
                                                    </fieldset>
                                                {/form}


                                            </div> <!-- /.container -->
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="sppb-section  seagull-c2a">
            <div class="sppb-row-container">
                <div class="sppb-row">
                    <div class="sppb-col-sm-12">
                        <div class="sppb-column">
                            <div class="sppb-column-addons">
                                <div class="clearfix">
                                    <div class="sppb-addon sppb-addon-cta " style="margin-bottom: 20px;">
                                        <div class="text-center">
                                            {*                                        <h3 class="sppb-addon-call-title" style="margin-bottom:25px;font-size:45px;">
                                                                                        Pár slov úvodem o
                                                                                    </h3>*}
